<Window x:Class="Kursach.GuestDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Изменение данных гостя" Height="300" Width="300" MinHeight="300" MinWidth="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ID або номер телефона гостя:"/>
            <TextBox x:Name="GuestIdOrPhoneNumberTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Новый тип номеру"/>
            <ComboBox x:Name="NewRoomTypeComboBox" Width="198"/>

            <TextBlock Text="Новая дата заїзду:"/>
            <DatePicker x:Name="NewCheckInDatePicker" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Нова дата виїзду:"/>
            <DatePicker x:Name="NewCheckOutDatePicker" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text=""/>
            <Button Content="Оновити дані гостя" Click="UpdateGuestDataButton_Click" Width="201"/>
        </StackPanel>
    </Grid>
</Window>
